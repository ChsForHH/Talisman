@model Talisman.Domain.Entities.New

@{
    ViewBag.Title = "Редактирование новости";
    Layout = "~/Views/Shared/_AdminLayot.cshtml";
}

<h3>Редактирование новости</h3>

@using (@Html.BeginForm("EditNew", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(c => c.Id)

    <div class="form-group">
        @Html.LabelFor(c => c.Date, "Дата")
        @Html.TextBoxFor(c => c.Date, new { @class = "form-control" })

        @Html.LabelFor(c => c.Content, "Содержимое")
        @Html.TextAreaFor(c => c.Content, new { @class = "form-control", rows = 5 })

        @Html.LabelFor(a => a.Url, "Url новости")
        @Html.TextBoxFor(a => a.Url, new { @class = "form-control" })
        
        @Html.LabelFor(c => c.Visible, "Отображение на сайте")
        @Html.CheckBoxFor(c => c.Visible, new { @class = "form-control" })
       
    </div>
    <button class="btn btn-success">Сохранить</button>
}


<div class="adminExit">
    @Html.ActionLink("Вернуться к списку новостей", "News", null, new { @class = "btn btn-default" })
</div>

