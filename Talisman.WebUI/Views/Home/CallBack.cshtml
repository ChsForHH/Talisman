@model Talisman.WebUI.Models.CallBackViewModel

<div id="wrCallBack">
    <div id="CallBack">
        <div id="cbBC"><span class="glyphicon glyphicon-remove-circle cbB" onclick="closeCB()"></span></div>
        @Html.ValidationSummary()
        @using (Ajax.BeginForm("CallBack", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "wrCallBack", OnComplete = "completeCB()" }))
        {
            <div class="form-group">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Ваше имя" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Number, new { @class = "form-control", placeholder = "Номер телефона" })
            </div>
            <button class="btn btn-default " type="submit">Отправить</button>
        }
    </div>
</div>  

