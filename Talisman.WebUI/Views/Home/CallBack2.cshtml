@model Talisman.WebUI.Models.CallBackViewModel

<div id="wrCallBack2">
    <div id="CallBack2">
        
        @Html.ValidationSummary()
        @using (Ajax.BeginForm("CallBack2", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "wrCallBack2", OnComplete = "completeCB2()" }))
        {
            <div class="form-group">
                @Html.LabelFor(l=>l.Name,"Ваше имя: *")
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control inp", placeholder = "" })
            </div>
            <div class="form-group">
                @Html.LabelFor(l=>l.Number,"Номер телефона: *")
                @Html.TextBoxFor(x => x.Number, new { @class = "form-control inp", placeholder = "" })
            </div>
            <button class="btn btn-primary" type="submit">Отправить</button>
        }
    </div>
</div>  