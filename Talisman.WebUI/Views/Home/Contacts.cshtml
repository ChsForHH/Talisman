
@{    
    ViewBag.Title = "Контакты";
    ViewBag.Description = "Компания Талисман-мебель Контакты Контактная информация";
    ViewBag.MainUrl = "https://talis-mebel.ru" + Url.Action("Contacts", "Home");
    ViewBag.StyleF = "/Content/Contactsnv2.css";
}

<!DOCTYPE html>

<div class="mainBlock shadow">
    <h1 class="chapterName3">Контакты</h1>
    <article>
        <ul id="contacts">
            <li class="liContacts">
                <span class="typeContact">
                    Адрес:
                </span>
                <span class="contContact">
                    @Html.Address()
                </span>
            </li>
            <li class="liContacts">
                <span class="typeContact">
                    Режим работы:
                </span>
                <span class="contContact">
                    @Html.Regim()
                </span>
            </li>
            <li class="liContacts">
                <span class="typeContact">
                    Телефон:
                </span>
                <span class="contContact">
                    <span class="glyphicon glyphicon-phone iconContacts"></span>
                    <span class="contactTel">@Html.Phone()</span>&nbsp;&nbsp;&nbsp;&nbsp;
                </span>
            </li>
            <li class="liContacts">
                <span class="typeContact">
                    <span class="glyphicon glyphicon-envelope"></span>&nbsp;
                    Email:
                </span>

                <span class="contContact">
                    <a class="contMailLink" href="mailto:@Html.Email()">@Html.Email()</a>
                </span>
            </li>
        </ul>
        <div id="contactsCallBack">
            <div class="localTitle">Также можно заказать обратный звонок, заполнив форму обратной связи: </div>
            <div id="wrContactsCallBack" class="shadowIns2">
                @{Html.RenderPartial("CallBack2");}
            </div>
        </div>
    </article>
</div>

