@model Talisman.Domain.Entities.Article
@{
    if (ViewBag.IsDef == null) { 
    ViewBag.Title = Model.Name;
    ViewBag.Description = Model.Name + " Статьи на сайте «Талисман-мебель»";
    ViewBag.MainUrl = "https://talis-mebel.ru" + Url.Action("Article", "Articles", new { artName = Model.Name.Replace(' ', '-').Replace("?", "").Replace(":", "").Replace("`", "").Replace(".", "") });
    }
    else
    {
        ViewBag.Title = "Статьи";
        ViewBag.Description = " Статьи на сайте «Талисман-мебель»";
        ViewBag.MainUrl = "https://talis-mebel.ru" + Url.Action("Article", "Articles");
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.StyleF = "/Content/Articles.min.css";
}
<section class="mainBlock shadow white">
    @if (ViewBag.IsDef != null)
    {
        <h1 class="chapterName3">Статьи</h1>
    }
    else
    {
        <div class="chapterName3">Статьи</div>
    }
    @{Html.RenderAction("ArticleMenu", new { id = Model.Id });}
</section>
    <div id="1" class="mainBlock shadow mt2">
        @if (ViewBag.IsDef != null)
        {
            <h2 class="chapterName3">@Model.Name</h2>
        }
        else
        {
            <h1 class="chapterName3">@Model.Name</h1>
        }
        @{ var htmlStr = new HtmlString(Model.Content);}
        @htmlStr
    </div>


